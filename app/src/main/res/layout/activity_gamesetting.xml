<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gamesetting"
    android:background="@drawable/gamesettingbackgroundphone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ImageView
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/dice1"
        android:background="@drawable/satudadu"
        android:layout_marginTop="80dp">
    </ImageView>

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/textAnime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select The Number of The Team"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textAlignment="center">
    </TextView>

    <RadioGroup
        android:id="@+id/radio1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:weightSum="3"
        android:orientation="horizontal">
        <RadioButton
            android:layout_width="wrap_content"
            android:id="@+id/radioButton1"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:textSize="20dp"
            android:text="Two Players"
            android:checked="true"
            android:gravity="center"
            android:background="@drawable/twoplayerscondition"
            android:button="@android:color/transparent"
            android:textColor="#ffffff">
        </RadioButton>
        <RadioButton
            android:layout_weight="1"
            android:id="@+id/radioButton2"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="Three Players"
            android:textSize="20dp"
            android:background="@drawable/threeplayerscondition"
            android:button="@android:color/transparent"
            android:textColor="@color/white">
        </RadioButton>
        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="Four Players"
            android:gravity="center"
            android:textSize="20dp"
            android:background="@drawable/fourplayerscondition"
            android:button="@android:color/transparent"
            android:textColor="@color/white">
        </RadioButton>
    </RadioGroup>

    <Button
        android:layout_gravity="center"
        android:id="@+id/btnStart"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="START"
        android:layout_marginTop="50dp"
        android:textSize="30sp"
        android:background="@drawable/custombutton"
        android:padding="20dp">
    </Button>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>